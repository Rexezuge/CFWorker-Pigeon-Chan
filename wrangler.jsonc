{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "pigeon-chan",
	"main": "src/index.ts",
	"compatibility_date": "2025-03-11",
	"preview_urls": false,
	"workers_dev": true,
	"observability": {
		"enabled": true,
		"head_sampling_rate": 1
	},
	"placement": {
		"mode": "smart"
	},
